@model IEnumerable<Pickify.Models.Product>
@{
    //ViewData["Title"] = "Index";
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between mb-4">
    <h1>Products</h1>
    <form class="form-inline">
        <input type="text" class="form-control" placeholder="Search by category"/><button type="submit" class="btn-primary btn">Search</button>
    </form>

</div>

<div class="row">
    @foreach (var product in Model)
    {
    <div class="col-md-4 mb-4">
        <div class="card">
            <img class="img-top" src="@Url.Content(product.ProductImages.Select(x=>x.URL).FirstOrDefault())" style="height:350px; width: auto; object-fit:cover" alt="@product.Description"/>
            <div class="card-body">
                <h5 class="card-title">@product.ProductName</h5>
                <p class="card-text"><span>₦</span>@product.UnitPrice</p>
                <a asp-controller="Product" asp-route-Id="@product.Description" asp-action="ProductDetail" class="btn-primary btn" style="background-color: #0d6efd">View Product</a>
            </div>
        </div>
    </div>
    }
    </div>

